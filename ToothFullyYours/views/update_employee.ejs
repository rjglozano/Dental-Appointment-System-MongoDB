    <!-- Main Site --> 
    <main id="site-main">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
            <a href="/employee"><i class="fas fa-angle-double-left"></i>back</a>
        </div>
    </div>
        <div class="container">
            <div class="form-title">
                <h1 class="text-style text-uppercase text-center">Update Employee Profile</h1>
            </div>
        <!-- Add appointment form-->
        <!-- form handling-->
        <div class="form-container">
            <form action="/api/employee" method="PUT" id="update_employee">
                <div class="new_employee">
                        <div class="form-header"> Employee Information </div>
                        <div class="form-group">
                            <label for="e_name" class="text-light">Name:</label>
                            <input type="hidden" name="id" value="<%=employee._id%>">
                            <input type="text" name="e_name" value="<%=employee.e_name%>" required>
                        </div>
                        <div class="form-group">
                            <label for="e_birthdate" class="text-light">Birth Date:</label>
                            <input type="text" name="e_birthdate" value="<%=employee.e_birthdate%>" required>
                        </div>
                        <div class="form-group">
                            <label for="e_age" class="text-light">Age: </label>
                            <input type="number" class="no-border" name="e_age" value="<%=employee.e_age%>" required>
                        </div>
            
                        <div class="form-group">
                            <label for="e_gender" class="text-light">Gender: </label>
                            <div class="radio inline">
                                <input type="radio"  id="radio-2" name="e_gender" value="Male" <%=employee.e_gender == 'Male' ? 'checked':''%>>
                                <label for="radio-2" class="radio-label">Male</label>
                            </div>
                            <div class="radio inline"> 
                                <input type="radio" id="radio-3" name="e_gender" value="Female" <%=employee.e_gender == 'Female' ? 'checked':''%>>
                                <label for="radio-3" class="radio-label">Female</label>
                            </div>
                            
                        </div>
                        <div  class="form-group">
                            <label for="e_nationality" class="text-light">Nationality: </label>
                            <input type="text" name="e_nationality" value="<%=employee.e_nationality%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_address" class="text-light">Home Address:</label>
                            <input type="text" name="e_address" value="<%=employee.e_address%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_phoneNum" class="text-light">Phone Number:</label>
                            <input type="number" name="e_phoneNum" value="<%=employee.e_phoneNum%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_email" class="text-light">Email:</label>
                            <input type="email" name="e_email" value="<%=employee.e_email%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_emg_contactPerson1" class="text-light">EC1 Full Name:</label>
                            <input type="text" name="e_emg_contactPerson1" value="<%=employee.e_emg_contactPerson1%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_emg_contactPerson1_phoneNum" class="text-light">EC1 Contact Number:</label>
                            <input type="number" name="e_emg_contactPerson1_phoneNum" value="<%=employee.e_emg_contactPerson1_phoneNum%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_emg_contactPerson1_relationship" class="text-light">EC1 Relationship:</label>
                            <input type="text" name="e_emg_contactPerson1_relationship" value="<%=employee.e_emg_contactPerson1_relationship%>" required>
                        </div>
            
            
                        <div class="form-header"> Employee Salary </div> 
                        <div  class="form-group">
                            <label for="e_ID" class="text-light">Employee ID:</label>
                            <input type="text" name="e_ID" id="e_ID" value="<%=employee.e_ID%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_position" class="text-light">Position:</label>
                            <input type="text" name="e_position" value="<%=employee.e_position%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_startDate" class="text-light">Start Date:</label>
                            <input type="text" name="e_startDate" value="<%=employee.e_startDate%>" required>
                        </div>
                    
                        <div  class="form-group">
                            <label for="e_philhealth" class="text-light">Phil-Health:</label>
                            <input type="text" name="e_philhealth" value="<%=employee.e_philhealth%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_SSS" class="text-light">SSS:</label>
                            <input type="text" name="e_SSS" value="<%=employee.e_SSS%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_pagibig" class="text-light">Pag-ibig:</label>
                            <input type="text" name="e_pagibig" value="<%=employee.e_pagibig%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_insurance" class="text-light">Insurance:</label>
                            <input type="text" name="e_insurance" value="<%=employee.e_insurance%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_totsalary" class="text-light">Total Salary:</label>
                            <input type="text" name="e_totsalary" value="<%=employee.e_totsalary%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_totdeduction" class="text-light">Tax/Benefits Reduction:</label>
                            <input type="text" name="e_totdeduction" value="<%=employee.e_totdeduction%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_totamount" class="text-light">Net Amount:</label>
                            <input type="text" name="e_totamount" value="<%=employee.e_totamount%>" required>
                        </div>
                        <div  class="form-group">
                            <label for="e_dategiven" class="text-light">Date Given:</label>
                            <input type="text" name="e_dategiven" value="<%=employee.e_dategiven%>" required>
                        </div>
            
                    </div>
                    <div class="form-group-button">
                        <button type="submit" onclick="counter()" class="btn text-style text-uppercase update">SUBMIT</button>
                    </div>  
            </form>
            </div>
    </div>
</div>
    </div>
       </main>
        
