<!-- include header -->
<%-include('include/_profile-header-update')%>
<!-- include header -->


<main class="container"> 
    <div class="col">
        <%-include('include/_messages')%>
        <div class="row-1">
            <div class="patient-photo">
                
                <img src="/img/edit 2.png">
                <h1 class="profile-text">MY PROFILE</h1>
            </div>
            <div class="patient-profile">
                <form action="" method="POST">
                    <div class="form-group">
                        <label class="info">Full Name</label>
                        <input type="hidden" name="user_id" value="<%=user._id%>">
                        <input type="text" name="name" value="<%=user.p_name%>" required>
                        
                    </div>
                    <div class="form-group">
                        <label class="info">Username</label>
                        <input type="text" name="username" value="<%=user.p_username%>" required>
                    </div>
                    <div class="form-group">
                        <label class="info">Email:</label>
                        <input type="text" name="email" value="<%=user.p_email%>" required>
                    </div>
                    <div class="form-group">
                        <label class="info">Phone:</label>
                        <input type="number" name="phoneNum" value="0<%=user.p_phoneNum%>" required>
                    </div>
                    <div class="form-group">
                        <label class="info">Birth Date: </label>
                        <input type="text" name="birthDate" value="<%=user.p_birthDate%>"required>
                    </div>
                    <div class="form-group">
                        <label class="info">Age: </label>
                        <input type="text" name="age" value="<%=user.p_age%>" required>
                    </div>
                    <div class="form-group">
                        <label class="info">Gender: </label>
                        <input type="text" name="gender" value="<%=user.p_gender%>" required>
                    </div>
                    <div class="form-group">
                        <label class="info">Nationality: </label>
                        <input type="text" name="nationality" value="<%=user.p_nationality%>" required>
                    </div>
                    <div class="form-group">
                        <label class="info">Home Address: </label>
                        <input type="text" name="homeAddress" value="<%=user.p_homeAddress%>" required>
                    </div>
                    <div class="form-group">
                        <label class="info">Emergency Contact Person: </label>
                        <input type="text" name="ECFullname" value="<%=user.p_ECFullname%>" required>
                    </div>
                    <div class="form-group">
                        <label class="info">Emergency Contact Number: </label>
                        <input type="number" name="ECNumber"  value="0<%=user.p_ECNumber%>" required>
                    </div>
                    <div class="form-group">
                        <label class="info">Emergency Contact Relationship: </label>
                        <input type="text" name="ECRelationship"  value="<%=user.p_ECRelationship%>" required>
                    </div>
                    <div class="form-group">   
                        <button type="submit">Update</button>   
                    </div>       
                   
            </form>
            </div>
        </div>
    </div>
</main>

<!-- include footer -->
<%-include('include/_footer')%>
<!-- include footer --> 