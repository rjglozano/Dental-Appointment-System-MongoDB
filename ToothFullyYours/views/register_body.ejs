
<!-- include header -->
<%-include('include/_register-header')%>
<!-- include header -->
<div class="back-container">
    <a href="/login">
    <img class="back" src="/img/backicon.png">
    </a>
   </div>
<div class="sign-up-container">
    <div class="sign-up-header">
        <h3 class="text">TOOTHFULLY YOURS</h3>
        <P class="text">Dental Clinic</P>
    </div>

    <div class="sign-up-body">
        <%-include('include/_messages')%>

        <div class="row1">
            <h3>Create An Account</h3>
            <div class="social-media-icons">
                <a href="https://www.facebook.com/toothfullyyoursdentalcare"><img class="facebook" src="/img/facebook-icon.png"></a>
                <img class="twitter" src="/img/twitter-icon.png">
            </div>
        </div>
        <form action="/register" method="POST" onsubmit="validateForm()" name="myForm" required >

            <div class="form-group">
                    <input type="text" name="name" placeholder="Fullname" value="<%= typeof name != 'undefined' ? name: '' %>">  
                    <input type="text" id="username" minlength="6" maxlength="12" name="username" v-model:value="username" pattern="[A-Za-z0-9]+" onkeydown="if(['Space'].includes(arguments[0].code)){return false;}" placeholder="Username"  value="<%= typeof username != 'undefined' ? username: '' %>">
                    <input type="email" name="email" placeholder="email@example" value="<%= typeof email != 'undefined' ? email: '' %>">  
                    <input type="password" id="p1" minlength="5" name="password" placeholder="Password" onkeyup="verification();" value="<%= typeof email != 'undefined' ? password: '' %>">  
                    <input type="password" id="p2" name="password2" placeholder="Confirm Password" onkeyup="verification();" value="<%= typeof email != 'undefined' ? password2: '' %>">                
                    <span id="Message"></span>
            </div>

        
            <div class="form-group">
                <button type="submit" value="submit" class="Confirm">Confirm</button>
            </div> 

        </form>
       
        <div class="row5">
           <a href="/login">Already a registered user?</a>
        </div>
    </div>

</div>

</div>


<!-- include footer -->
<%-include('include/_footer')%>
